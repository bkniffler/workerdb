{
  "name": "workerdb-monorepo",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules && rm -rf ./packages/*/lib",
    "dev": "lerna run --parallel dev",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/node": "^10.10.3",
    "jest": "^23.6.0",
    "lerna": "^3.4.0",
    "ts-jest": "^23.10.1",
    "typescript": "^3.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts"
    ],
    "coverageReporters": [
      "html",
      "cobertura",
      "text"
    ]
  }
}
